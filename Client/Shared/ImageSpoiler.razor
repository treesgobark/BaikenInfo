@if (!string.IsNullOrWhiteSpace(Src))
{
    @if (IsActive)
    {
        <MudButton Variant="Variant.Outlined" Style="width: 100%;height: 100%" OnClick="() => IsActive = false">Close Image</MudButton>
        <MudImage style="width: 100%" src="@Src"></MudImage>
    }
    else
    {
        <MudButton Variant="Variant.Outlined" Style="width: 100%;height: 100%" OnClick="() => IsActive = true">Open Image</MudButton>
    }
}
else
{
    <MudText Align="Align.Center">
        No Image Available (this should never happen, please yell at @("@")treesgobark in discord about this)
    </MudText>
}

@code {
    [Parameter]
    public string? Src { get; set; }

    private bool IsActive { get; set; }
}
