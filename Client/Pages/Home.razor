@page "/"
@using Client.Shared

<PageTitle>@Constants.TitlePrefix Home</PageTitle>

<MudStack>
    <MudText Typo="Typo.h3">So you want to play baiken...</MudText>
    <MudGrid>
        <MudItem xs="12" md="6" lg="4">
            <MudStack Spacing="6">
                <MudPaper>
                    <MudButton Href="Neutral" Style="width: 100%;padding: 24px;">
                        <MudStack Row Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="3">
                            <MudText Align="Align.Center" Typo="Typo.button" Style="font-size: 28px">Neutral</MudText>
                            <MudImage Src="Moves/fS.png" Style="height: 100%"></MudImage>
                        </MudStack>
                    </MudButton>
                </MudPaper>
                <MudPaper>
                    <MudButton Href="Defense" Style="width: 100%;padding: 24px;">
                        <MudStack Row Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="3">
                            <MudText Align="Align.Center" Typo="Typo.button" Style="font-size: 28px">Defense</MudText>
                            <MudImage Src="Moves/236P2.png" Style="height: 100%"></MudImage>
                        </MudStack>
                    </MudButton>
                </MudPaper>
                <MudPaper>
                    <MudButton Href="Defense" Style="width: 100%;padding: 24px;">
                        <MudStack Row Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="3">
                            <MudText Align="Align.Center" Typo="Typo.button" Style="font-size: 28px">Throwkizeme</MudText>
                            <MudImage Src="Moves/GroundThrow.png" Style="height: 100%"></MudImage>
                        </MudStack>
                    </MudButton>
                </MudPaper>
            </MudStack>
        </MudItem>
        <MudItem xs="12" md="6" lg="4">
            <MudStack Spacing="6">
                <MudPaper>
                    <MudButton Href="Safejumps" Style="width: 100%;padding: 24px;">
                        <MudStack Row Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="3">
                            <MudText Align="Align.Center" Typo="Typo.button" Style="font-size: 28px">Safejumps</MudText>
                            <MudImage Src="Moves/236K.png" Style="height: 100%"></MudImage>
                        </MudStack>
                    </MudButton>
                </MudPaper>
                <MudPaper Style="padding: 24px">
                    <MudStack>
                        <MudText Typo="Typo.h6">Some helpful external links:</MudText>
                        <MudList T="string">
                            <MudListItem Href="https://glossary.infil.net" Target="_blank">Terms Glossary</MudListItem>
                            <MudListItem Href="https://www.dustloop.com/w/Notation" Target="_blank">Dustloop's Notation Guide</MudListItem>
                            <MudListItem Href="https://www.dustloop.com/w/GGST/Baiken" Target="_blank">Baiken's Dustloop Page</MudListItem>
                        </MudList>
                    </MudStack>
                </MudPaper>
            </MudStack>
        </MudItem>
        <MudItem xs="12" md="6" lg="4">
            <MudStack Spacing="6">
                <MudPaper>
                    <MudButton Href="Combos" Style="width: 100%;padding: 24px;">
                        <MudStack Row Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="3">
                            <MudText Align="Align.Center" Typo="Typo.button" Style="font-size: 28px">COMBOS</MudText>
                            <MudImage Src="Moves/jD.png" Style="height: 100%"></MudImage>
                        </MudStack>
                    </MudButton>
                </MudPaper>
                <MudPaper>
                    <MudButton Href="Pressure" Style="width: 100%;padding: 24px;">
                        <MudStack Row Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="3">
                            <MudText Align="Align.Center" Typo="Typo.button" Style="font-size: 28px">Pressure</MudText>
                            <MudImage Src="Moves/j236S.png" Style="height: 100%"></MudImage>
                        </MudStack>
                    </MudButton>
                </MudPaper>
                <MudPaper>
                    <MudButton Href="Pressure" Style="width: 100%;padding: 24px;">
                        <MudStack Row Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="3">
                            <MudText Align="Align.Center" Typo="Typo.button" Style="font-size: 28px">Psychic Damage</MudText>
                            <MudImage Src="Moves/5D.png" Style="height: 100%"></MudImage>
                        </MudStack>
                    </MudButton>
                </MudPaper>
            </MudStack>
        </MudItem>
    </MudGrid>
</MudStack>
